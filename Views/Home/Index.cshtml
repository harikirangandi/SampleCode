@model IEnumerable<sampleApp.Models.PersonViewModel>

@{
    ViewData["Title"] = "Index";
}

<h3>Users List</h3>

<p>
    <a asp-action="AddPerson">Create New User</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                @Html.HiddenFor(modelItem => item.Id)
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2" align="center">
                   No Users to display..!!!
                </td>
            </tr>
        }
    </tbody>
</table>